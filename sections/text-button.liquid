{{ 'section-text-button.css' | asset_url | stylesheet_tag }}
<div style="background-color: {{ section.settings.bg_color }};">
  <div class="text-button px-4 pb-8 md:px-7 lg:pb-20 max-w-4xl mx-auto text-center">
    {% if section.settings.heading != blank %}
      <h2 class="text-2xl md:text-3xl text-grey-900 {% if section.settings.text_link != blank %}mb-4 {% else %}mb-3 {% endif %} md:mb-4 font-bold tracking-mdSpacing" style="color: {{ section.settings.title_color }};">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="text-button-content" style="color: {{ section.settings.content_color }};">
      {% if section.settings.content != blank %}
        {{ section.settings.content }}
      {% endif %}
      {% if section.settings.text_link != blank %}
        <a href="{{ section.settings.text_link_url }}" class="inline-block text-sm font-bold text-white tracking-lgSpacing rounded-sm bg-primary hover:bg-primary-hover focus:bg-primary-hover uppercase mt-4 px-8 py-3"><span class="inline-block py-px">{{ section.settings.text_link }}</span></a>
      {% endif %}
    </div>
  </div>
</div>


{% capture src_url %}{{ 'section-text-button.js' | asset_url }}{% endcapture %}
{% render 'atom_script', src: src_url, priority: 'normal', type: "defer" %}

{% schema %}
  {
    "name": "Text And Button",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Text color",
        "default": "#090F24"
      },
      {
        "type": "color",
        "id": "content_color",
        "label": "Text color",
        "default": "#404346"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      }, 
      {
        "type": "text",
        "id": "text_link",
        "label": "Text link"
      }, {
        "type": "url",
        "id": "text_link_url",
        "label": "Text link url"
      }
    ],
    "presets": [
      {
        "name": "Text And Button"
      }
    ]
  }
{% endschema %}