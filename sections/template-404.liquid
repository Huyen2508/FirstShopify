<div class="block sm:flex items-center justify-center flex-wrap">
  <div class="block sm:flex py-10 sm:py-40">
    <div class="text-2xl font-bold text-primary sm:text-5xl pr-4 sm:block hidden h-16 mb-2 border-r border-input h-full pb-4.5">
      {{- section.settings.number_title -}}
    </div>
    <div>
      <div class="flex justify-center sm:justify-start mb-2">
        <div class="my-0 sm:mt-6 text-2xl font-bold text-primary sm:text-5xl tracking-mdSpacing mr-3 sm:mr-4 sm:hidden block">
          {{- section.settings.number_title -}}
        </div>
        <div class="w-px sm:hidden block h-8 bg-border"></div>
        <div class="my-0 text-2xl font-bold text-grey-900 sm:text-4xl tracking-mdSpacing ml-3 sm:ml-4">
          {{- section.settings.title -}}
        </div>
      </div>
      <div class="mb-4 sm:mb-6 max-w-[646px] px-4">
        <p class="text-xs font-normal text-grey-700 tracking-xsSpacing text-center">
          {{- section.settings.subtext_title -}}
        </p>
      </div>
      <div class="grid grid-cols-2 px-4 sm:px-0 gap-4 sm:mt-4 ml-0 sm:ml-4">
        {%- if section.settings.button_url == blank -%}
          {%- assign shop_url = shop.url -%}
        {%- else -%}
          {%- assign shop_url = section.settings.button_url_first -%}
        {%- endif -%}
        {%- render 'button', class: 'button-primary px-4 sm:px-6 mr-0', link_text: section.settings.button_label_fitst, link_url: shop_url -%}
        {%- if section.settings.button_url_second != blank -%}
          {%- render 'button', class: 'button-outlined px-4 sm:px-6 font-medium', link_text: section.settings.button_label_second, link_url: section.settings.button_url_second -%}
        {%- endif -%}
      </div>
    </div>
  </div>
  <div class="h-px sm:w-full w-auto mx-4 sm:mx-20 mb-8 sm:mb-20 bg-border"></div>
</div>

{% schema %}
{
  "name": "Template 404",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "number_title",
      "label": "404 Heading",
      "default": "404"
    },
    {
      "type": "text",
      "id": "title",
      "label": "404 Heading Title",
      "default": "Page not found"
    },
    {
      "type": "text",
      "id": "subtext_title",
      "label": "404 Subtitle Text",
      "default": "We can't seem to find the page you're looking for."
    },
    {
      "type": "text",
      "id": "button_label_fitst",
      "label": "Button Label First",
      "default": "Go back home"
    },
    {
      "type": "url",
      "id": "button_url_first",
      "label": "Button URL First"
    },
    {
      "type": "text",
      "id": "button_label_second",
      "label": "Button Label Second",
      "default": "Contact Us"
    },
    {
      "type": "url",
      "id": "button_url_second",
      "label": "Button URL Second"
    }
  ],
  "presets": [
    {
      "name": "Template 404"
    }
  ]
}
{% endschema %}
