{%- liquid
  assign is_gift_card = false
  if template contains 'gift-card' or product.gift_card?
    assign is_gift_card = true
  endif
-%}

<div class="relative {% if is_gift_card %}{% else %}{% endif %}">
  <div class="flex items-center justify-between">
    {%- render 'product-badge' -%}
  </div>
  <product-info></product-info>
  {%- render 'promo-banner' -%}
  {%- render 'reviews-rating' -%}
  {%- render 'product-description-short' -%}
</div>