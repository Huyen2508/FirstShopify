<wishlist-count class="{{ class }}">
  {%- if customer -%}
    {%- assign wishlist_url = '/account?view=favourites' -%}
  {%- else -%}
    {%- assign wishlist_url = '/pages/favourites' -%}
  {%- endif -%}
  <a href="{{ wishlist_url }}" class="swym-wishlist relative">
    {%- render 'icon' with 'icon-heart-header' -%}
    <span class="js-wishlist-count absolute pt-px pl-px top-2 -right-2 h-5 w-5 items-center justify-center rounded-full bg-primary text-xs font-bold tracking-xsSpacing flex text-white opacity-0"></span>
  </a>
</wishlist-count>

{%- unless ignore_script == true -%}
  {%- capture src_url -%}
    {{- 'module-wishlist-count.js' | asset_url -}}
  {%- endcapture -%}

  {%- render 'atom_script', src: src_url, priority: 'normal', type: 'defer' -%}
{%- endunless -%}